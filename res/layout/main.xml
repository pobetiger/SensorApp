<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sensor Read Application"
                />
        <!-- debug use only
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Next Screen >>"
                android:onClick="gotoNextScreen"
                />
        -->

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get List"
                android:onClick="getDeviceSensorList"
                android:background="?android:attr/selectableItemBackground"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="List of Sensors:"
                android:id="@+id/SensorLog"/>
        <LinearLayout
                android:id="@+id/layout_box"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <!-- left empty for appending -->
        </LinearLayout>


    </LinearLayout>

</ScrollView>

